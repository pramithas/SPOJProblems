import java.util.Scanner;

public class Test {
	public static void main(String args[]) {
		Scanner input = new Scanner(System.in);
		String inputString = "";

		while (!inputString.equals("0")) {
			inputString = input.nextLine();
			String lcs = compute(new StringBuilder(inputString).reverse().toString(), inputString);
			System.out.println(inputString.length() - lcs.length());
		}

	}

	private static String compute(String string1, String string2) {

		if (string1.length() == 0)
			return "";

		if (string2.length() == 0)
			return "";

		for (int i = string1.length(); i > 0; i--) {
			for (int j = string2.length(); j > 0; j--) {
				if (string1.charAt(i - 1) == string2.charAt(j - 1)) {
					return compute(string1.substring(0, string1.length() - 1), string2.substring(0, j - 1))
							+ string1.charAt(i - 1);
				}
			}
		}
		return "";
	}
}
